];

const mid = Math.ceil(skillCategories.length / 2);
const col1 = skillCategories.slice(0, mid);
const col2 = skillCategories.slice(mid);
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
  <div class="prose">
    {col1.map(category => (
      <>
        <strong>{category.category}</strong>
        <div class="flex flex-wrap gap-2 mt-2">
          {category.items.map(item => (
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-800 rounded-full text-sm">{item}</span>
          ))}
        </div>
      </>
    ))}
  </div>

  <div class="prose">
    {col2.map(category => (
      <>
        <strong>{category.category}</strong>
        <div class="flex flex-wrap gap-2 mt-2">
          {category.items.map(item => (
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-800 rounded-full text-sm">{item}</span>
          ))}
        </div>
      </>
    ))}
  </div>
</div>
